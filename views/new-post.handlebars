    <div class="container">
      <h1>Create a New Post</h1>
      <form id="add-post-form">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" class="form-control" placeholder="Enter the title" required>
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          <textarea id="content" class="form-control" rows="5" placeholder="Enter your post content" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <script src="/js/add-post.js"></script>
