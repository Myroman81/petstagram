<section class="hero is-medium is-info">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        Welcome to Petsagram!
      </h1>
      <h2 class="subtitle">
        Share your pet's moments with the world
      </h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half">
        <figure class="image is-4by3">
          <img src="https://source.unsplash.com/random/800x600?pets" alt="Cute pets">
        </figure>
      </div>
      <div class="column is-half">
        <div class="box">
          <h3 class="title is-4">Login</h3>
          <form class="login-form">
            <div class="field">
              <label class="label" for="email-login">Email:</label>
              <div class="control">
                <input class="input" type="text" id="email-login" />
              </div>
            </div>
            <div class="field">
              <label class="label" for="password-login">Password:</label>
              <div class="control">
                <input class="input" type="password" id="password-login" />
              </div>
            </div>
            <div class="field">
              <button class="button is-primary" type="submit">Login</button>
            </div>
          </form>
        </div>
        <div class="box">
          <h3 class="title is-4">Sign Up</h3>
          <form class="signup-form">
            <div class="field">
              <label class="label" for="name-signup">Name:</label>
              <div class="control">
                <input class="input" type="text" id="name-signup" />
              </div>
            </div>
            <div class="field">
              <label class="label" for="email-signup">Email:</label>
              <div class="control">
                <input class="input" type="text" id="email-signup" />
              </div>
            </div>
            <div class="field">
              <label class="label" for="password-signup">Password:</label>
              <div class="control">
                <input class="input" type="password" id="password-signup" />
              </div>
            </div>
            <div class="field">
              <button class="button is-primary" type="submit">Sign Up</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
